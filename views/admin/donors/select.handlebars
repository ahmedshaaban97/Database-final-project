<div class="container">
    <div class="card card-register mx-auto mt-5">
        <div class="card-header">Find A Donor</div>
        <div class="card-body">
            <form action="/admin/donor/select_ssn" method="post">
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label for="exampleInputName">Social Security Number</label>
                            <input class="form-control" id="exampleInputName" type="text" aria-describedby="nameHelp" placeholder="Enter Social Security Number" name="ssn">
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Search</button>
            </form>
        </div>
    </div>
</div>


<table class="table">
    <thead>
    <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">SSN</th>
        <th scope="col">Blood Type</th>
        <th scope="col">Weight</th>
        <th scope="col">Age</th>
    </tr>
    </thead>
    <tbody>
    {{#each donors}}
        <tr>
            <td>{{Fname}}</td>
            <td>{{Lname}}</td>
            <td>{{ssn}}</td>
            <td>{{bloodType}}</td>
            <td>{{weight}}</td>
            <td>{{age}}</td>
        </tr>
    {{/each}}

    </tbody>
</table>

<!-- Bootstrap core JavaScript-->
<script src="/admin/vendor/jquery/jquery.min.js"></script>
<script src="/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- Core plugin JavaScript-->
<script src="/admin/vendor/jquery-easing/jquery.easing.min.js"></script>